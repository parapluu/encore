passive class PassiveCounter: Id
  var a : ActiveCounter
  var something : int
  def init(start:int) : unit
    this.a = new ActiveCounter(start)
  end

  def install(c:PassiveCounter) : unit
   if (this == c) then
     this.a!install(c : PassiveCounter)
   end
  end

  def inc() : unit
    this.a ! inc()
  end

  def dec() : unit
    this.a ! dec()
  end

  def read() : int
    get (this.a!read())
  end

  def dont_read() : Fut[int]
    this.a!read()
  end

  def get_me_something() : int
    this.something
  end
end

class GCPressure
  def doit(times:int, main:Main) : unit
    val p = new PassiveCounter(random(1000))
    p.install(p)
    main ! here_you_go(p)
    if times > 0 then
      this ! doit(times - 1, main)
    end
  end
end

class Main
  def here_you_go(p:PassiveCounter) : unit
    repeat i <- random(10) do
      p.dec()
    end
    get (p.dont_read())
    this.issue1118()
  end

  def issue1118() : unit
    val p = new PassiveCounter(0)
    p.install(p)
  end

  def main() : unit
    new GCPressure() ! doit(10000, this)
  end
end
