class ActiveCounter
  var c : int
  var meta_counter : PassiveCounter

  def init(start:int) : unit
    this.c = start
  end

  def inc() : unit
    this.c = this.c + 1
  end

  def dec() : unit
    this.c = this.c - 1
  end

  def read() : int
    this.c
  end

  def sanity_check() : unit
    assertTrue(this.c == this.meta_counter.read())
  end

  def install(m:PassiveCounter) : unit
    this.meta_counter = m
  end

end

