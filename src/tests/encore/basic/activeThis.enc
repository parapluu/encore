def id<t>(x: t): t x

class Foo
  def fr0b() : bool
    true

  def foo() : Fut bool
    let that = this in{
      that.fr0b();
    }

  def bar() : Fut bool
    let that = null : Foo in{
      that = this;
      that.fr0b()
    }

  def baz() : Fut bool
    let that = id<Foo>(this)
    in
      that.fr0b()

passive class Kiko
  def xxx(x: int): int
