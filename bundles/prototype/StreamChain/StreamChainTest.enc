import StreamChain

class Main
  def main() : void
    let
      sio = new StreamIO
      f = \(x:int) -> x*1.0
      -- Test with small input
      n = 5
      -- Test with medium input
      -- n = 5000
      -- Test with 1M input
      -- n = 1000000
      sa1 = sio.produceI(n)
      sb1 = chain(sa1,f)
    in {
      -- Print out the result sb1
      print "Output stream: ";
      while (not eos sb1) {
        print get sb1;
        sb1 = getNext sb1;
        if eos sb1 then print "EOS";
      };
    }

class StreamIO {

  -- create stream int
  stream produceI(i:A) : A
    while i>0 {
      yield i;
      i = i - 1;
    }

  def printSI(sa1:Stream A) : void
    while (not eos sa1) {
      print(get sa1);
      sa1 = getNext sa1;
      if eos sa1 then print "EOS";
    }
}
