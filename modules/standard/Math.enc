-- square root
fun sqrt(x: real): real
  EMBED (real) 
    sqrt(#{x}); 
  END
end

-- absolute value (real)
fun abs(x: real): real
  if x < 0 then 
    0 - x
  else 
    x
  end
end

-- absolute value (int)
fun absi(x: int): int
  if x < 0 then 
    0 - x
  else 
    x
  end
end

-- cosine
fun cos(x: real): real
  EMBED (real) 
    cos(#{x}); 
  END
end

-- sine
fun sin(x: real): real
  EMBED (real) 
    sin(#{x}); 
  END
end
